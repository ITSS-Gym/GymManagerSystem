<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.milotnt.mapper.CourseOrderMapper">

    <select id="findAll" resultType="courseOrder">
        SELECT *
        FROM course_order
    </select>

    <insert id="insertCourseOrder" parameterType="courseOrder">
        INSERT INTO course_order(course_id, course_name, coach, member_name, member_account, course_begin, status)
        VALUES (#{courseId}, #{courseName}, #{coach}, #{memberName}, #{memberAccount}, #{courseBegin}, #{status})
    </insert>

    <select id="selectCourseOrderByMemberAccount" parameterType="java.lang.Integer" resultType="courseOrder">
        SELECT *
        FROM course_order
        WHERE member_account = #{memberAccount}
    </select>

    <delete id="deleteByCourseOrderId" parameterType="java.lang.Integer">
        DELETE
        FROM course_order
        WHERE course_order_id = #{courseOrderId}
    </delete>

    <select id="selectMemberByCourseIdAndMemberAccount" parameterType="java.lang.Integer" resultType="courseOrder">
        SELECT *
        FROM course_order
        WHERE course_id = #{courseId}
          AND member_account = #{memberAccount}
    </select>

    <select id="selectMemberOrderList" parameterType="java.lang.Integer" resultType="courseOrder">
        SELECT *
        FROM course_order
        WHERE course_id = #{courseId}
    </select>

    <select id="updateStatusByOrderId" parameterType="java.lang.Integer">
        UPDATE course_order
        SET status = "accepted"
        WHERE course_order_id = #{courseOrderId}
    </select>

    <select id="deleteOrderByOrderId" parameterType="java.lang.Integer">
        DELETE
        FROM course_order
        WHERE course_order_id = #{courseOrderId}
    </select>

</mapper>